#!/bin/bash
export MPLCONFIGDIR="."

echo "Generating data files..."
bin/mercupy-plain

if [ [[ReferenceRotate]] -gt 0 ];then
    echo "Changing to referenche frame..."
    bin/mercupy-ref2ref [[ReferenceBody]] [[BodyAxis1]]-[[BodyAxis2]] [[ReferenceType]]
fi

echo "Plotting results..."
bin/mercupy-plot 

echo "Saving results variables..."
bash results.sh
